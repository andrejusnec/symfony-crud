{% extends 'base.html.twig' %}
{% block title %}User list {% endblock %}
{% block body %} 
<h1>Users</h1>
{% if users %}
<table id="users" class="table table-striped">
      <thead>
        <tr>
          <th>User</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
          <tr>
            <td>{{ user.name }}</td>
            <td>
            <a style="margin-top: 5px;" href="/users/user/{{ user.id }}" class="btn btn-dark">Show</a>
            {% if is_granted('ROLE_ADMIN') %}
            <a style="margin-top: 5px;" href="/users/user/edit/{{ user.id }}" class="btn btn-dark">Edit</a>
            <a style="margin-top: 5px;" href="/users/user/delete/{{user.id}}" class="btn btn-danger">Delete</a>
            {% endif %}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
{% else %}
<p>No Users</p>
{% endif %}
{% endblock %}