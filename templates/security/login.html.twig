{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div style="max-width:400px; margin: auto">
<form method="post" action="{{ path('login') }}">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputName">Name</label>
    <input style="max-width:400px" type="text" value="{{ last_username }}" name="_username" id="inputName" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input style="max-width:400px" type="password" name="_password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button style="margin-top:10px" class="btn btn-small btn-secondary" type="submit">
        Sign in
    </button>
</form>
{% if app.user %}
        <div class="mb-3">
            <strong>You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a> </strong>
        </div>
    {% endif %}
</div>
{% endblock %}
